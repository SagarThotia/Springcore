<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

       <bean id="blackInk" class="com.st.springcore.beans.BlackInk" />

       <bean id="fountainPen" class="com.st.springcore.beans.FountainPen">
           <constructor-arg ref="blackInk" />
       </bean>

       <bean id="writer" class="com.st.springcore.beans.Writer">
           <constructor-arg ref="fountainPen" />
       </bean>
</beans>