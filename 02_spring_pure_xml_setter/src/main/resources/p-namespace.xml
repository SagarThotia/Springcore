<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

        <bean id="blackink" class="com.st.springcore.beans.BlackInk" />

        <bean id="fountainPen" class="com.st.springcore.beans.FountainPen" p:ink-ref="blackink"/>

        <bean id="writer" class="com.st.springcore.beans.Writer" p:pen-ref="fountainPen" />
</beans>